<body>
<div class="middle">
<section class="bg1">
  <div class="container">
    <div class="row">
<%if (status == "success") { %>
		<form method="post">
			<div class="col-sm-6 col-md-4" style="float: none; margin:auto;">
					<div class="bottom-down">
							<img src="../images/logo.png"  alt="" style="height: 90px;"/>
						 </div>
		<div class="single" style="color: white;">
			<h5>Set New Password</h5>
			<div id="updateErrormsg"></div>
			<input type="hidden" name="user_email" id="user_email" value="<%= email %>">
		</div>
		
		<div class="single  text-center">
	    <div class="form-group">
		   <input type="password" class="form-control" name="password" id="password" value="" size="40" required="" aria-required="true" aria-invalid="false" placeholder="Enter new Password">
		</div>
		</div>
		<div class="single text-center">
		<div class="form-group"> 
		   <input type="password" class="form-control" name="confirm_password" id="confirm_password" value="" size="40" required="" aria-required="true" aria-invalid="false" placeholder="Enter confirm Password">
		</div>
		</div>
		<div class="clearfix" style="padding-top: 0px;">
		   <button type="button" id="setPasswordBTN" class="btn btn-primary btn-lg" style="padding: 12px 0; width:100%;">UPDATE PASSWORD</button>
	 	</div>
	  
		</div>
	  	</form>

<% }else{ %>
	<div class="col-md-6 col_centered" style="background: #fff; height:150px;">
      <h5 style="color:red; padding-top: 20px;">Invalid Request</h5>
      <div style="height:1px; background: #ccc;"></div>
      <p style="padding-top: 20px; font-size: 14px;">It seems some issue with the link. Please try again.</p>
	</div>
<% } %>
	</div>
   </div>
</section>
</div>
	
<!--login-popup-modal-box-end-->

<!--footer_end-->
<script src="/js/jquery.js"></script> 
<script src="/js/bootstrap.min.js"></script>
<!--scrolling-menu-script-start-->
<script>
    $('#setPasswordBTN').click(function () {
 $("#updateErrormsg").html(""); //error 		
 		var user_email = $('#user_email').val();
	    var password = $('#password').val();
	    var confirm_password = $('#confirm_password').val();
	    if(password != confirm_password){
            $("#updateErrormsg").html("<font style='font-size:14px;margin-top:-15px;' color='red'>&nbsp&nbsp;Password and Confirm Password not matching.<br></font>"); //error message..
	    }
	    else if(password.length<6){
            $("#updateErrormsg").html("<font style='font-size:14px;margin-top:-15px;' color='red'>&nbsp&nbsp;Please set password of minimum 6 character length.<br></font>"); //error message..
	    }
	    else{

	  		$.ajax({
	          type:"POST",
	          url:"updateForgotPassword",
	          data:{email:user_email,password:password},
	          success: function(response){
	          	//alert(response);
	            if(response == 200){
					//console.log(response,"Check")
	                $("#updateErrormsg").html("<font style='font-size:14px; margin-top:-15px;' color='green'>Congratulations ! Password updated successfully.</font>"); //error message..
	            } 
				else {
	                $("#updateErrormsg").html("<font style='font-size:14px;margin-top:-15px;' color='red'>Your link is expired.</font>"); //error message..
	            }
	          }
	      	}); 
	    }
	       
  	});
</script>
